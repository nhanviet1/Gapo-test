<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cmtSection"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        app:layout_constraintLeft_toRightOf="@+id/avt"
        app:layout_constraintTop_toTopOf="@+id/avt">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/cmtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxzczxcxzc"
            android:fontFamily="@font/sf_pro"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toLeftOf="@id/name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

   <TextView
       android:id="@+id/time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="2 phut"
       android:fontFamily="@font/sf_pro"
       android:textSize="12sp"
       android:layout_marginLeft="8dp"
       app:layout_constraintTop_toBottomOf="@id/cmtSection"
       app:layout_constraintLeft_toLeftOf="@id/cmtSection"/>

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thích"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintLeft_toRightOf="@id/time"/>

    <TextView
        android:id="@+id/cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trả lời"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintLeft_toRightOf="@id/like"/>

    <TextView
        android:id="@+id/replyNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintLeft_toLeftOf="@id/time"
        android:text="Xem 2 bình luận trước..."
        android:fontFamily="@font/sf_pro"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>